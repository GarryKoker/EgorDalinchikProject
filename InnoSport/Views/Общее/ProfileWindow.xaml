<Window x:Class="InnoSport.Views.Общее.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль" Height="450" Width="800">
    <Grid Margin="10">
        <TextBlock Text="Профиль" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,20" />

        <Grid Margin="0,50,0,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
            <TextBlock x:Name="NameTextBlock" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />

            <TextBlock Text="Фамилия:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
            <TextBlock x:Name="SurnameTextBlock" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" />

            <TextBlock Text="Отчество:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
            <TextBlock x:Name="OtchestvoTextBlock" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" />

            <TextBlock Text="Номер телефона:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
            <TextBlock x:Name="PhoneNumberTextBlock" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" />

            <TextBlock Text="Email:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
            <TextBlock x:Name="EmailTextBlock" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" />
        </Grid>

        <Button Content="Назад" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,10" 
                Click="BackButton_Click" />
    </Grid>
</Window>



