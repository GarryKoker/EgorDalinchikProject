<Window x:Class="InnoSport.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="14" Margin="0 0 0 5">Введите имя</TextBlock>
            <TextBox x:Name="NameTextBox" Margin="0 0 0 10"></TextBox>
            <TextBlock FontSize="14" Margin="0 0 0 5">Введите фамилию</TextBlock>
            <TextBox x:Name="SurnameTextBox" Margin="0 0 0 10"></TextBox>
            <TextBlock FontSize="14" Margin="0 0 0 5">Введите логин</TextBlock>
            <TextBox x:Name="LoginTextBox" Margin="0 0 0 10"></TextBox>
            <TextBlock FontSize="14" Margin="0 0 0 5">Введите номер телефона</TextBlock>
            <TextBox x:Name="PhoneNumberTextBox" Margin="0 0 0 10"></TextBox>
            <TextBlock FontSize="14" Margin="0 0 0 5">Введите пароль</TextBlock>
            <PasswordBox x:Name="PasswordTextBox" Margin="0 0 0 10"></PasswordBox>
            <TextBlock FontSize="14" Margin="0 0 0 5">Повторите пароль</TextBlock>
            <PasswordBox x:Name="ConfirmPasswordTextBox" Margin="0 0 0 15"></PasswordBox>
            <Button x:Name="RegistrationButton" Content="Зарегистрироваться" Click="RegistrationButton_Click" Margin="0 0 0 10"></Button>
            <TextBlock>
                <Run Text="Уже есть аккаунт?"></Run>
                <Hyperlink Click="GoToLoginLink_Click">Войти</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
