<Window x:Class="InnoSport.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="14" Margin="0 0 0 5">Логин/Номер телефона</TextBlock>
            <TextBox x:Name="LoginTextBox" Width="200" Height="25" Margin="0 0 0 10"></TextBox>
            <TextBlock FontSize="14" Margin="0 0 0 5">Пароль</TextBlock>
            <PasswordBox x:Name="PasswordTextBox" Width="200" Height="25" Margin="0 0 0 15"></PasswordBox>
            <Button x:Name="LoginButton" Content="Войти" Click="LoginButton_Click" FontSize="14" Width="100" Height="30" Margin="0 0 0 10"></Button>
            <TextBlock FontSize="12">
                <Run Text="Нет аккаунта?"></Run>
                <Hyperlink Foreground="#2196f3" Click="GoToRegistrationLink_Click">Зарегистрироваться</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
