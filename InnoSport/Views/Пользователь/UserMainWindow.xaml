<Window x:Class="InnoSport.Views.Пользователь.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главная - Пользователь" Height="450" Width="800">
    <Grid>
        <!-- Верхняя панель -->
        <DockPanel Background="#FF2D2D30" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Добро пожаловать в InnoSport!" 
                       Foreground="White" 
                       FontSize="16" 
                       VerticalAlignment="Center" 
                       Margin="10,0,0,0" />
        </DockPanel>

        <!-- Основной контент -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Приветствие -->
            <TextBlock x:Name="WelcomeTextBlock" 
                       Text="Привет, [Имя пользователя]!" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" />

            <!-- Кнопки действий -->
            <Button Content="Перейти в профиль" 
                    Width="200" 
                    Height="40" 
                    Margin="0,10,0,0" 
                    Click="GoToProfile_Click" />

            <Button Content="Просмотреть доступные секции" 
                    Width="200" 
                    Height="40" 
                    Margin="0,10,0,0" 
                    Click="ViewSections_Click" />
        </StackPanel>
    </Grid>
</Window>

